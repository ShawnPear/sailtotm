<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--用户浏览偏好状态同步线程池-->
    <bean id="userGoodsPreferenceSyncThreadPool" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="corePoolSize" value="5" />
        <property name="maxPoolSize" value="200" />
        <property name="queueCapacity" value="200" />
    </bean>

    <!--词典同步线程池-->
    <bean id="translatorSyncThreadPool" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="corePoolSize" value="5" />
        <property name="maxPoolSize" value="200" />
        <property name="queueCapacity" value="200" />
    </bean>

    <!--es同步线程池-->
    <bean id="goodsCacheSyncThreadPool" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="corePoolSize" value="5" />
        <property name="maxPoolSize" value="200" />
        <property name="queueCapacity" value="200" />
    </bean>
</beans>
